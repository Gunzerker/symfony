                    alert("The phone number is invalid");
                    return false;
                  }
                  var element = document.getElementById("lat");
                  if(element.classList.contains("is-invalid")){
                    alert("The coordinates are invalid");
                    return false;
                  }
                  var element = document.getElementById("lon");
                  if(element.classList.contains("is-invalid")){
                    alert("The coordinates are invalid");
                    return false;
                  }
                  return true;
                }
